<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tr.datacollection.CarInfo">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >
        <!-- 时间信息-->s


        <LinearLayout
            android:background="@color/bgofdefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkGrey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="基础信息"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                style="@style/textstyle"
                android:id="@+id/carorder"
                android:textColor="@color/lightgray"
                android:layout_marginBottom="5dp"
                android:text="当前车辆序号:1" />
            <LinearLayout style="@style/layoutstyle">
                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="车牌号:" />

                    <EditText
                        android:id="@+id/chepaihao"
                        style="@style/myeditstyle"/>
                </LinearLayout>


            </LinearLayout>
        <LinearLayout style="@style/layoutstyle">

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="机动车辆识别码（VIN）:" />

                <EditText
                    android:id="@+id/vin"
                    android:layout_width="150dp"
                    style="@style/myeditstyle"/>
            </LinearLayout>



        </LinearLayout>
            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/textstyle"
                        android:text="品牌:" />

                    <TextView
                        android:id="@+id/sp_pingpai"
                        style="@style/myeditstyle"
                        android:layout_width="0dp"
                        >

                    </TextView>
                </LinearLayout>
                <LinearLayout style="@style/layoutstyle2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        style="@style/textstyle"
                        android:text="型号:" />

                    <TextView
                        android:id="@+id/sp_xinghao"
                        style="@style/myeditstyle"
                        android:layout_width="0dp"
                        >

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout style="@style/layoutstyle">

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    android:id="@+id/textView"
                    style="@style/textstyle"
                    android:text="年份:" />

                <Spinner
                    android:id="@+id/sp_nianfen"
                    style="@style/stylespanner">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                style="@style/layoutstyle2"
                >
                <TextView

                    style="@style/textstyle"
                    android:text="国别:" />
                <Spinner
                    android:id="@+id/sp_guobie"
                    style="@style/stylespanner"
                    >

                </Spinner>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
               style="@style/layoutstyle">
            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="车辆类型:" />

                <Spinner
                    android:id="@+id/sp_leixing"
                    style="@style/stylespanner"
                    android:layout_width="200dp">

                </Spinner>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/bgofdefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkGrey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="详细信息"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
        <LinearLayout style="@style/layoutstyle">

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="车内人数:" />

                <Spinner
                    android:id="@+id/sp_cnrenshu"
                    style="@style/stylespanner"
                    android:layout_width="120dp">

                </Spinner>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="特殊作用:" />

                <Spinner
                    android:id="@+id/sp_teshuzy"
                    style="@style/stylespanner"
                    android:layout_width="140dp">

                </Spinner>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/layoutstyle"
            android:visibility="gone">

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="紧急机动车辆使用:" />

                <Spinner
                    android:id="@+id/sp_jinjishiyong"
                    style="@style/stylespanner">

                </Spinner>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/layoutstyle">

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="行驶方向:" />

                <Spinner
                    android:id="@+id/sp_xsfangxiang"
                    style="@style/stylespanner"
                    android:layout_width="120dp">

                </Spinner>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="车辆操控行为:" />

                <Spinner
                    android:id="@+id/sp_caozuo"
                    style="@style/stylespanner"
                   >

                </Spinner>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/bgofdefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkGrey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="车辆损坏情况"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey" />
        </LinearLayout>

        <LinearLayout style="@style/layoutstyle">

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/textstyle"
                    android:text="初接触点:" />

                <Spinner
                    android:id="@+id/sp_jiechudian"
                    style="@style/stylespanner">

                </Spinner>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="损坏部位:" />

                <Spinner
                    android:id="@+id/sp_shbuwei"
                    style="@style/stylespanner">

                </Spinner>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle2">

                <TextView
                    style="@style/textstyle"
                    android:text="损坏程度:" />

                <Spinner
                    android:id="@+id/sp_shchengdu"
                    style="@style/stylespanner">

                </Spinner>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/bgofdefault"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="车辆照片"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gary6" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGrey" />
        </LinearLayout>
        <LinearLayout style="@style/layoutstyle"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout style="@style/layoutstyle2"
                android:layout_width="100dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/addphotos"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/addphoto" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="添加照片"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle2">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle2">

                <ListView

                    android:id="@+id/imgs"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"></ListView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="-15dp"
            android:background="@color/darkGrey" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:drawableRight="@drawable/icon_addcar"
            android:onClick="addNewCar"
            android:text="添加下一辆涉及车" />
    </LinearLayout>
</FrameLayout>
