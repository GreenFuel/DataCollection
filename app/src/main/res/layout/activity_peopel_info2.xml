<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:onClick="back"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"



            android:layout_weight="1"
            android:gravity="center"
            android:text="驾驶人信息"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:onClick="add"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_queren"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/textstyle"
                android:layout_marginBottom="10dp"
                android:text="基本信息" />

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="姓名:" />

                    <Spinner
                        android:id="@+id/sp_name"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="性别:" />

                    <Spinner
                        android:id="@+id/sp_xingbie"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="出生日期:" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="选择日期"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <TextView
                    style="@style/textstyle"
                    android:text="驾照号码:" />

                <EditText
                    android:id="@+id/jiazhao"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="管辖区:" />

                    <Spinner
                        android:id="@+id/sp_guanxiaqu"
                        style="@style/stylespanner"
                        android:layout_width="110dp">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="等级:" />

                    <Spinner

                        android:id="@+id/sp_dengji"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="商业驾照:" />

                    <Spinner
                        android:id="@+id/sp_shangyejiazhao"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="签注:" />

                    <Spinner
                        android:id="@+id/sp_qianzhu"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="身份:" />

                    <Spinner
                        android:id="@+id/sp_shenfentype"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="类型:" />

                    <Spinner
                        android:id="@+id/sp_renyuantype"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="受伤状况:" />

                    <Spinner
                        android:id="@+id/sp_sszhuangtai"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="受伤部位:" />

                    <Spinner
                        android:id="@+id/sp_ssbuwei"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="受伤程度:" />

                    <Spinner
                        android:id="@+id/sp_sschengdu"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/textstyle"
                android:layout_marginBottom="10dp"
                android:text="详细信息" />

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="车辆序号:" />

                    <Spinner
                        android:id="@+id/sp_cheliangxunhao"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="座位位置:" />

                    <Spinner
                        android:id="@+id/sp_position"

                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="约束:" />

                    <Spinner
                        android:id="@+id/sp_ysxitong"
                        style="@style/stylespanner"
                        android:layout_width="120dp">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="头盔使用:" />

                    <Spinner
                        android:id="@+id/sp_tuokuishiyong"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="安全气囊状态:" />

                    <Spinner
                        android:id="@+id/sp_aqqnzt"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="抛出状态:" />

                    <Spinner
                        android:id="@+id/sp_paochuzhuangtai"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView

                        style="@style/textstyle"
                        android:text="超速询问:" />

                    <Spinner

                        android:id="@+id/sp_chaosuxunwen"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView

                        style="@style/textstyle"
                        android:text="分心驾驶:" />

                    <Spinner
                        android:id="@+id/sp_fenxinjiashi"
                        style="@style/stylespanner">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle"
                android:layout_marginBottom="0dp"
                >

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="发生时的行驶行为:" />

                    <Spinner
                        android:id="@+id/sp_sgfssxingwie"
                        style="@style/stylespanner"
                        android:layout_width="160dp">

                    </Spinner>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="新增行为" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已添加行为数0" />
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle"
                android:layout_marginBottom="0dp"
                >

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="事故发生时的状态:" />

                    <Spinner
                        android:id="@+id/sp_sgfsszhuangtai"
                        style="@style/stylespanner"
                        android:layout_width="160dp">

                    </Spinner>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="新增状态" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已添加状态数0" />
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle"
                android:layout_marginBottom="0dp"
                >

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="交通违法行为:" />

                    <Spinner
                        android:id="@+id/sp_jtwfxingwei"
                        style="@style/stylespanner"
                        android:layout_width="200dp">

                    </Spinner>
                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="新增违法" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已添加违法数0" />
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="驾照限制:" />

                    <Spinner
                        android:id="@+id/sp_jiazhaoxianzhi"
                        style="@style/stylespanner"
                        android:layout_width="240dp">

                    </Spinner>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="新增限制" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已添加限制数0" />
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="怀疑饮酒:" />

                    <Spinner
                        android:id="@+id/sp_yinjiu"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">

                <TextView
                    style="@style/textstyle"

                    android:text="毒品测试" />
                <LinearLayout
                    style="@style/layoutstyle2"
                    android:layout_marginLeft="50dp">

                    <TextView
                        style="@style/textstyle"
                        android:text="毒品类型:" />

                    <Spinner
                        android:id="@+id/sp_dupinleixing"
                        style="@style/stylespanner"
                        >

                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    style="@style/layoutstyle2"
                    >

                    <TextView
                        style="@style/textstyle"
                        android:text="测试状态:" />

                    <Spinner
                        android:id="@+id/sp_ceshizhuangtai"
                        style="@style/stylespanner"
                        android:layout_width="120dp">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/layoutstyle">


                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="测试类型:" />

                    <Spinner
                        android:id="@+id/sp_ceshitype"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/layoutstyle2">

                    <TextView
                        style="@style/textstyle"
                        android:text="测试结果:" />

                    <Spinner
                        android:id="@+id/sp_ceshiresult"
                        style="@style/stylespanner"
                        android:layout_width="130dp">

                    </Spinner>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
